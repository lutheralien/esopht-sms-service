{
  "name": "esopht-sms-service",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "build": "pkg . --target node14-win-x64 --output dist/sms-sender.exe",
    "dev": "nodemon app.js"
  },
  "author": "esopht-lutheralien",
  "license": "ISC",
  "description": "SMS service application for Windows",
  "dependencies": {
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-winston": "^4.2.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "oracledb": "^6.6.0",
    "winston": "^3.14.2"
  },
  "bin": "app.js",
  "pkg": {
    "outputPath": "dist",
    "assets": [
      "node_modules/axios/**/*",
      "node_modules/node-fetch/**/*",
      "node_modules/oracledb/**/*"
    ],
    "scripts": [
      "node_modules/axios/**/*.js",
      "node_modules/node-fetch/**/*.js",
      "node_modules/oracledb/**/*.js"
    ]
  },
  "devDependencies": {
    "nodemon": "^3.1.7",
    "pkg": "^5.8.1"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
